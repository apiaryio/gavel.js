{
  "name": "gavel",
  "version": "0.0.0-semantically-released",
  "description": "Validator of HTTP transactions (JavaScript implementation)",
  "main": "lib/gavel.js",
  "engines": {
    "node": ">= 4"
  },
  "bin": {
    "gavel": "bin/gavel"
  },
  "scripts": {
    "build": "coffee -b -c -o lib/ src/",
    "lint": "coffeelint src",
    "test": "npm run test:server && npm run test:browser && npm run test:features",
    "test:server": "mocha \"test/unit/**/*-test.coffee\"",
    "test:browser": "mochify \"test/unit/**/*.coffee\" --transform=coffeeify --extension=.coffee",
    "test:features": "coffee scripts/cucumber.coffee",
    "prepublish": "npm run build",
    "coverage": "scripts/cov",
    "coveralls": "npm run coverage mocha-lcov-reporter | coveralls",
    "ci:lint": "npm run lint",
    "ci:test": "npm run test && npm run coveralls",
    "ci:release": "semantic-release"
  },
  "dependencies": {
    "amanda": "1.0.1",
    "async": "2.6.1",
    "caseless": "0.12.0",
    "clone": "2.1.2",
    "commander": "2.9.0",
    "curl-trace-parser": "0.0.10",
    "deep-equal": "1.0.1",
    "googlediff": "0.1.0",
    "http-string-parser": "0.0.6",
    "is-type": "0.0.1",
    "json-parse-helpfulerror": "1.0.3",
    "json-pointer": "0.6.0",
    "media-typer": "0.3.0",
    "tv4": "1.3.0"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "coffee-coverage": "2.0.1",
    "coffee-script": "1.12.5",
    "coffeeify": "2.1.0",
    "coffeelint": "2.1.0",
    "coveralls": "3.0.2",
    "cross-spawn": "6.0.5",
    "cucumber": "1.3.2",
    "gavel-spec": "1.2.0",
    "jscoverage": "0.6.0",
    "lodash": "4.17.11",
    "mocha": "5.2.0",
    "mocha-lcov-reporter": "1.3.0",
    "mochify": "6.1.1",
    "prettyjson": "1.2.1",
    "semantic-release": "15.12.4",
    "sinon": "7.3.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/apiaryio/gavel.js"
  },
  "keywords": [
    "http",
    "validation",
    "diff",
    "request",
    "response",
    "gavel"
  ],
  "author": "Apiary Czech Republic, s.r.o. <support@apiary.io>",
  "license": "MIT"
}
