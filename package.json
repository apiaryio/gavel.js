{
  "name": "gavel",
  "version": "0.0.0-semantically-released",
  "description": "Validator of HTTP transactions (JavaScript implementation)",
  "main": "build/index.js",
  "engines": {
    "node": ">= 8"
  },
  "bin": {
    "gavel": "bin/gavel"
  },
  "scripts": {
    "start": "npm run build -- --watch",
    "build": "rollup -c=rollup.config.js",
    "lint": "eslint lib/**/*.js test/**/*.js",
    "test": "npm run test:server && npm run test:features",
    "test:server": "mocha \"test/**/*.test.js\"",
    "test:server:coverage": "nyc npm run test:server",
    "test:features": "node scripts/cucumber.js",
    "coveralls": "nyc --reporter=text-lcov npm run test:server | coveralls",
    "ci:lint": "npm run lint",
    "ci:test": "npm run coveralls && npm run test:features",
    "ci:build": "npm run build",
    "ci:release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  },
  "dependencies": {
    "amanda": "1.0.1",
    "caseless": "0.12.0",
    "clone": "2.1.2",
    "commander": "2.20.0",
    "content-type": "1.0.4",
    "curl-trace-parser": "0.0.10",
    "deep-equal": "1.0.1",
    "http-string-parser": "0.0.6",
    "jju": "1.4.0",
    "json-pointer": "0.6.0",
    "media-typer": "1.1.0",
    "tv4": "1.3.0",
    "url": "0.11.0"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "coveralls": "3.0.5",
    "cross-spawn": "6.0.5",
    "cucumber": "1.3.2",
    "eslint": "6.1.0",
    "eslint-config-airbnb": "17.1.1",
    "eslint-config-airbnb-base": "13.2.0",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-import": "2.18.2",
    "gavel-spec": "4.1.0",
    "husky": "3.0.2",
    "lint-staged": "9.2.1",
    "mocha": "6.2.0",
    "nyc": "14.1.1",
    "prettier": "1.18.2",
    "rollup": "1.19.3",
    "rollup-plugin-commonjs": "10.0.2",
    "rollup-plugin-node-resolve": "5.2.0",
    "semantic-release": "15.13.19",
    "sinon": "7.4.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/apiaryio/gavel.js"
  },
  "keywords": [
    "http",
    "validation",
    "diff",
    "request",
    "response",
    "gavel"
  ],
  "author": "Apiary Czech Republic, s.r.o. <support@apiary.io>",
  "license": "MIT"
}
